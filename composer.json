{
    "name": "spell-checker/spell-checker",
    "type": "library",
    "description": "Multi-language code and text spell checker in PHP",
    "homepage": "http://github.com/spell-checker/spell-checker",
    "license": ["BSD-3-Clause"],
    "authors": [
        {
            "name": "Vlasta Neubauer",
            "homepage": "https://www.paranoiq.cz"
        }
    ],
    "require": {
        "php": "^7.1|^8.0",
        "nette/neon": "~2.4|~3.0",
        "symfony/finder": "~3.4|~4.0|~5.0",
        "tracy/tracy": "~2.4",
        "dogma/dogma": "^0.1.15|^0.2.0"
    },
    "require-dev": {
        "dogma/dogma-dev": "0.1.18"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.3-dev"
        }
    },
    "autoload": {
        "classmap": ["source", "tests"]
    },
    "bin": [
        "spell-checker"
    ],
    "scripts": {
        "da": "composer dump-autoload",

        "build": [
            "composer install",
            "php -r \"@mkdir('log', 0777, true);\"",
            "php -r \"@mkdir('temp/cache', 0777, true);\"",
            "rm -rf temp/cache/*"
        ],
        "check": [
            "@test",
            "@stan",
            "@cs-src",
            "@cs-tests",
            "@spell",
            "@lint"
        ],
        "check-all": [
            "@test-all",
            "@stan-all",
            "@lint-all",
            "@spell",
            "@cs-src",
            "@cs-tests"
        ],

        "test": "vendor/bin/tester tests -c tests --colors 1",
        "test-all": [
            "php80 vendor/nette/tester/src/tester tests -c tests --colors 1",
            "php74 vendor/nette/tester/src/tester tests -c tests --colors 1",
            "php73 vendor/nette/tester/src/tester tests -c tests --colors 1",
            "php72 vendor/nette/tester/src/tester tests -c tests --colors 1",
            "php71 vendor/nette/tester/src/tester tests -c tests --colors 1"
        ],
        "tests-coverage": "vendor/bin/tester tests -c tests --colors 1 -p phpdbg --coverage tests/coverage.html --coverage-src source",

        "stan": "vendor/bin/phpstan analyse -c build/phpstan.neon -l 5 source tests",
        "stan-all": [
            "php80 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon -l 5 source tests",
            "php74 vendor/phpstan/phpstan/phpstan analyse -c build/phpstan.neon -l 5 source tests"
        ],

        "cs": [
            "@cs-src",
            "@cs-tests"
        ],
        "cs-src": "vendor/bin/phpcs --standard=vendor/dogma/dogma-dev/src/CodeSniffer/ruleset.xml --extensions=php --encoding=utf-8 --tab-width=4 -sp source",
        "cs-tests": "vendor/bin/phpcs --standard=vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml --extensions=php,phpt --encoding=utf-8 --tab-width=4 -sp tests",
        "cs-fix": "vendor/bin/phpcbf --standard=vendor/dogma/dogma-dev/src/CodeSniffer/ruleset-tests.xml --extensions=php,phpt --encoding=utf-8 --tab-width=4 source tests",

        "spell": "php spell-checker.php -c build/spell-checker.neon --checkDictionaryFiles --memoryLimit 1024M --noLogo",

        "lint": "vendor/bin/parallel-lint source tests",
        "lint-all": [
            "php80 vendor/php-parallel-lint/php-parallel-lint/parallel-lint source tests",
            "php74 vendor/php-parallel-lint/php-parallel-lint/parallel-lint source tests",
            "php73 vendor/php-parallel-lint/php-parallel-lint/parallel-lint source tests",
            "php72 vendor/php-parallel-lint/php-parallel-lint/parallel-lint source tests",
            "php71 vendor/php-parallel-lint/php-parallel-lint/parallel-lint source tests"
        ]
    }
}
